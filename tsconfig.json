{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true, // https://github.com/storybookjs/storybook/issues/9463
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2018", "dom"],
    "paths": {
      "@abi/*": ["assets/abi/*"],
      "@contract/*": ["app/@contract/*"],
      "@canpay-lib/*": ["app/canpay-lib/*"],
      "@validator/*": ["app/@validator/*"],
      "@class/*": ["app/core-classes/*"],
      "@service/*": ["app/core-services/*"],
      "@util/*": ["app/core-utils/*"],
      "@component/*": ["app/core-components/*"],
      "@config/*": ["app/core-config/*"],
      "@env/*": ["environments/*"],
      "@extensions/*": ["./*.extensions.ts"]
    }
  },
  "angularCompilerOptions": {
    "enableIvy": true,
    "allowEmptyCodegenFiles": true
  }
}
